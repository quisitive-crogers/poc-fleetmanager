<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="POC.FleetManager.Loader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:POC.FleetManager.Loader"
    Shell.FlyoutBehavior="Flyout"
    Title="POC.FleetManager.Loader">

    <ShellContent
        Title="Loader"
        ContentTemplate="{DataTemplate local:LoaderScreen}"
        Route="Loader" />
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
